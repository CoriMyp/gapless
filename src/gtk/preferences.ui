<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="MusicPreferencesWindow" parent="AdwPreferencesWindow">
    <property name="default-width">480</property>
    <property name="default-height">300</property>
    <property name="search-enabled">false</property>
    <property name="modal">true</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="AdwActionRow" id="tracker_row">
                <property name="title" translatable="true">Load music from Tracker database</property>
                <property name="subtitle" translatable="true">Try if the music are not stored on SSD</property>
                <property name="activatable_widget">tracker_btn</property>
                <child>
                  <object class="GtkSwitch" id="tracker_btn">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="true">Music directory</property>
                <property name="subtitle" translatable="true">Load music from local directory</property>
                <property name="activatable_widget">music_dir_btn</property>
                <child>
                  <object class="GtkButton" id="music_dir_btn">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>